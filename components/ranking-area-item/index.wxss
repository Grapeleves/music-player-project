/* components/ranking-area-item/index.wxss */
.item{
    display: flex;
    justify-content: space-between;
    background-color: #eee;
    border-radius: 12rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
    width: 100%;
}
.left{
    padding: 24rpx;
    flex: 1;
    overflow: hidden;
}
.left .title{
    font-size: 34rpx;
    font-weight: 600;
}
.left .list{
    font-size: 28rpx;
    width: 100%;
    margin-top: 6rpx;
}
.left .list .list-item{
    color: #333;
    margin-top: 6rpx;
    width: 100%;
  
    display: inline-block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    text-emphasis: none;
}
.right{
    width: 220rpx;
    position: relative;
}
.right .image{
    width: 100%;
    height: 100%;
}
.right .count{
    position: absolute;
    bottom: 0;
    right: 0;
    color: #fff;
    font-size: 22rpx;
    border-radius: 12rpx;
    padding: 6rpx 10rpx;
    background: rgba(0,0,0,.5);
}